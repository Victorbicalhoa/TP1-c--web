@page
@model Exercicio10Model
<h1>Adicionar Produto</h1>

<form method="post">
    <label>Nome do Produto:</label>
    <input type="text" asp-for="Nome" required />

    <label>Preço:</label>
    <input type="number" step="0.01" asp-for="Preco" required />

    <button type="submit">Cadastrar Produto</button>
</form>

@if (Model.ProdutoCadastrado)
{
    <h2>Produto Cadastrado:</h2>
    <p><strong>Nome:</strong> @Model.Nome</p>
    <p><strong>Preço:</strong> R$ @Model.Preco</p>
}