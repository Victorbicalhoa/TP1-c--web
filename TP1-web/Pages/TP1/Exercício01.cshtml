@page
@model DescontoModel
<h1>Calculadora de Desconto</h1>

<form method="post">
    <label>Preço Original:</label>
    <input type="number" step="0.01" asp-for="PrecoOriginal" required />
    <button type="submit">Calcular</button>
</form>

@if (Model.PrecoFinal > 0)
{
    <p>Preço com desconto: @Model.PrecoFinal</p>
}