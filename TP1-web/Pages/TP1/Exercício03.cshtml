@page
@model Exercicio03Model
<h1>Calculadora de Área</h1>

<form method="post">
    <label>Base do Retângulo:</label>
    <input type="number" step="0.01" asp-for="BaseRetangulo" required />

    <label>Altura do Retângulo:</label>
    <input type="number" step="0.01" asp-for="AlturaRetangulo" required />

    <button type="submit">Calcular Área</button>
</form>

@if (Model.AreaCalculada > 0)
{
    <p><strong>Área Calculada:</strong> @Model.AreaCalculada m²</p>
}
